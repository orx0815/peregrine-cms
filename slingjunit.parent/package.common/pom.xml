<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.peregrine-cms</groupId>
        <artifactId>slingjunit.parent</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>slingjunit.package.common</artifactId>
    <packaging>content-package</packaging>

    <name>Peregrine Sling-JUnit Testing Package</name>
    <description>JUnit tests for Peregrine CMS designed to the run within Sling-JUnit test-runner, /system/sling/junit/.html</description>

    <properties>
        <noContent>false</noContent>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.apache.sling</groupId>
            <artifactId>org.apache.sling.junit.core</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>slingjunit.core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>slingjunit.core.remote</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <!-- define the resources that will go into the package -->
            <resource>
                <!--
                    we want to keep some of the META-INF files and not configure
                    everything in the plugin.
                -->
                <directory>${basedir}/src/main/content/META-INF</directory>
                <targetPath>../vault-work/META-INF</targetPath>
            </resource>
            <resource>
                <directory>${basedir}/src/main/content/jcr_root</directory>
                <excludes>
                    <!-- exclude .vlt control files in the package -->
                    <exclude>**/.vlt</exclude>
                    <exclude>**/.vltignore</exclude>
                    <exclude>**/.gitignore</exclude>
                    <exclude>**/*.iml</exclude>
                    <exclude>**/.classpath</exclude>
                    <exclude>**/.project</exclude>
                    <exclude>**/.settings</exclude>
                    <exclude>**/.DS_Store</exclude>
                    <exclude>**/target/**</exclude>
                    <exclude>**/pom.xml</exclude>
                </excludes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId> org.apache.jackrabbit</groupId>
                <artifactId>filevault-package-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <packageType>mixed</packageType>
                    <userId>${sling.user}</userId>
                    <password>${sling.password}</password>
                    <failOnMissingEmbed>true</failOnMissingEmbed>
                    <group>com.peregrine-cms.slingjunit</group>
                    <validatorsSettings>
                      <!-- avoid for now:
                      ValidationViolation: Property '_jcr_data' [Binary] is not allowed in node with types [nt:folder]: No applicable property definition found for name and type! @ jcr_root/content/admin/assets/images/tesla.jpg/_jcr_content/_jcr_data.binary, validator: jackrabbit-nodetypes, JCR node path: /content/admin/assets/images/tesla.jpg/jcr:content
                      Even when validator is probably right:
                      https://wcm-io.atlassian.net/wiki/spaces/WCMIO/pages/1353056261/How+to+make+your+content+packages+comply+with+Jackrabbit+FileVault+Validation
                      -->
                      <jackrabbit-nodetypes>
                        <isDisabled>true</isDisabled>
                      </jackrabbit-nodetypes>
                    </validatorsSettings>
                </configuration>
                <executions>
                    <execution>
                        <id>core-junit-test-package</id>
                        <goals>
                            <goal>package</goal>
                        </goals>
                        <configuration>
                            <embeddedTarget>/apps/slingjunit/install</embeddedTarget>
                            <embeddeds>
                                <embedded>
                                    <groupId>org.apache.sling</groupId>
                                    <artifactId>org.apache.sling.junit.core</artifactId>
                                    <generateFilter>true</generateFilter>
                                </embedded>
                                <embedded>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>slingjunit.core</artifactId>
                                    <generateFilter>true</generateFilter>
                                </embedded>
                            </embeddeds>
                            <dependencies>
                                <dependency>
                                    <group>${project.groupId}</group>
                                    <name>ui.apps</name>
                                    <version>${project.version}</version>
                                </dependency>
                            </dependencies>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <configuration>
                    <licenseName>peregrine-cms-license</licenseName>
                    <licenseResolver>${project.baseUri}../../src/license</licenseResolver>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
